@model Entities.Kategori

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Kategori</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="KategoriAdi" class="control-label"></label>
                <input asp-for="KategoriAdi" class="form-control" />
                <span asp-validation-for="KategoriAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KategoriAciklamasi" class="control-label"></label>
                <input asp-for="KategoriAciklamasi" class="form-control" />
                <span asp-validation-for="KategoriAciklamasi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EklenmeTarihi" class="control-label"></label>
                <input asp-for="EklenmeTarihi" class="form-control" />
                <span asp-validation-for="EklenmeTarihi" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Aktif" /> @Html.DisplayNameFor(model => model.Aktif)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

